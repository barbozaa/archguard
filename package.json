{
  "name": "archguard",
  "version": "1.0.0",
  "description": "Production-grade architecture analysis CLI that detects structural risks and assigns health scores",
  "type": "module",
  "bin": {
    "archguard": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "static-analysis",
    "architecture",
    "code-quality",
    "cli",
    "typescript",
    "linter",
    "architecture-analysis",
    "dependency-graph",
    "circular-dependencies",
    "code-analysis"
  ],
  "author": "barbozaa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barbozaa/archguard.git"
  },
  "bugs": {
    "url": "https://github.com/barbozaa/archguard/issues"
  },
  "homepage": "https://github.com/barbozaa/archguard#readme",
  "dependencies": {
    "cac": "^6.7.14",
    "cli-table3": "^0.6.3",
    "picocolors": "^1.0.0",
    "ts-morph": "^21.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.6.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
